{
  "name": "@babblebot/cli",
  "version": "1.0.0",
  "description": "A CLI Tool for babblebot-server",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jest.json --coverage",
    "prettier": "prettier src/**/*.{js,ts} --ignore-path ./.prettierignore",
    "types": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "commit": "git-cz",
    "build": "npm run build:clean && npm run build:prod",
    "build:clean": "rimraf dist",
    "build:prod": "tsc -p .",
    "release": "./node_modules/.bin/semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendavies99/babblebot-cli.git"
  },
  "keywords": [
    "template",
    "typescript"
  ],
  "author": "Ben Davies <me@bdavies.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bendavies99/babblebot-cli/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "homepage": "https://github.com/bendavies99/babblebot-cli#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix src/**/*.ts",
      "eslint src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.9",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "semantic-release": "^17.3.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4"
  },
  "dependencies": {
    "yargs": "^16.2.0"
  }
}
